page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
/*搜索栏*/
.SLL{
  width: 390px;
height: 44px;
line-height: 20px;
background-color: rgba(255,255,255,1);
color: rgba(16,16,16,1);
font-size: 14px;
text-align: center;
box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.1);
font-family: Roboto;
}
.SSL_text{

  line-height:40px;
  color: rgb(16,16,16);
  font-size: 17px;
  text-align: left;
  font-family: PingFangSC-medium;
  margin-left: -300px;
  margin-top: 10px;

}
.SSL-image{
  display: block;
  width: 14px;
  height: 14px;
  margin-top: -18px;
  margin-left: 80px;
}
.SSL-image1{
  display: block;
  width: 20px;
  height: 20px;
  margin-top: -18px;
  margin-left: 300px;
}
.SSL_input{
  width: 201px;
  height: 25px;
  line-height: 20px;
  border-radius: 8px;
  background-color: rgba(255,255,255,1);
  color: rgba(16,16,16,1);
  font-size: 14px;
  text-align: center;
  box-shadow: 0px 2px 6px 0px rgba(0,0,0,0.07);
  margin-top: -32px;
  margin-left: 75px;
}
/*正文*/
.liangtupian{
  width: 650rpx;
  height: 250rpx;
  background-color: purple;
}
.left{
  width: 300rpx;
  height: 175rpx;
  border-radius: 25rpx;
  background: linear-gradient(to right,rgba(254,178,122,1),rgba(255,122,92,1));
  display: flex;
  justify-content: space-between;
}
.left image{
  max-width: 100%;
  max-height: 100%;
  width: 60%;
  height: 90%;
  object-fit: contain;
  margin-top: 16rpx;
}
.left view{
